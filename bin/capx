#!/usr/bin/env ruby
# encoding: utf-8

$LOAD_PATH.unshift(File.dirname(File.realpath(__FILE__)) + '/../lib')

require 'capx'

def show_help
  puts 'params: <stage>  <switch>'
  puts 'example: capx staging ssh'
end

if ARGV[0]
  stage = ARGV[0]
  param = ARGV[1]

  runner = Capx::Runner.new(stage: stage, param: param)
  runner.run
else
  show_help
end